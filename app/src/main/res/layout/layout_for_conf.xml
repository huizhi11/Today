<?xml version="1.0" encoding="utf-8"?>
<!--确认订单界面的ListView组件对应的Layout-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grayPrimary">

    <com.eat.today.mImageView
        android:id="@+id/dish_img_conf"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="5dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/dish_name_conf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/dish_img_conf"
        android:layout_marginLeft="3dp"
        android:gravity="center_vertical"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_count_conf"
        android:layout_below="@id/dish_name_conf"
        android:layout_toRightOf="@id/dish_img_conf"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grayLight"
        android:text="×0"/>

    <TextView
        android:id="@+id/dish_price_conf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="20sp"/>
</RelativeLayout>
